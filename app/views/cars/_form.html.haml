= simple_form_for(@car, html: { class: 'form-horizontal'}) do |f|
    = f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category" }
    = f.input :title, label: "Destination Title", input_html: { class: "form-control" }
    = f.input :description, label: "Description", input_html: { class: "form-control" }
    = f.input :owner, label: "Owner Name", input_html: { class: "form-control" }
    = f.input :price, label: "Price for the trip (per person)", input_html: { class: "form-control" }
    %br/
    = f.button :submit